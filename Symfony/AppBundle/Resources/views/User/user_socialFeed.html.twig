		function postToFeed() 
		{
			var id = document.getElementById('templateid').value;
			var desc = document.getElementById('temp_'+id).innerHTML;
			var webLinkForUser = 'http://www.angelwishesnetwork.com/';
			
			if(document.getElementById('listLink1').checked == true)
