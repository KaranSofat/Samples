			}
			else if(document.getElementById('listLink2').checked == true)
			{
				webLinkForUser = 'http://www.angelwishesnetwork.com/#divHowItWorks';
			}

			   
			FB.ui(
				{
		  			method: 'feed',
			  		link: webLinkForUser,
			  		picture: 'http://www.angelwishesnetwork.com/AngelWishes.jpg',
			  		name: 'Angelwishes',
			  		caption: '',
			  		description: desc,
				}, 
				function(response)
				{
					if(response.post_id)
					{
						window.location.href="http://www.angelwishesnetwork.com/user/dashboard/preview";
						//$('#openreminder').click();
					}
				}
			);
		 }

		
		function postToFeedbh() 
		{
			//alert(document.getElementById('hidSelectedLink').value);
			FB.api('/me', {fields: "id,first_name,last_name,email,picture"}, function(response) {

				FB.api(
				    {
				        method: 'fql.query',
				        query: 'SELECT pid, src_big, src_big_height, src_big_width FROM photo WHERE aid IN ( SELECT aid FROM album WHERE owner="' + response.id + '" AND name = "Profile Pictures")'
				    },
				    function(data1) 
					{
				        console.log(data1);
				    }
				);
				var facebookid = response.id;

				if(response.first_name)
				{
					document.getElementById('socialPage1').style.display="none";
					document.getElementById('socialPage2').style.display="block";

					//alert(document.getElementById('hidSelectedLink').value);
					
					if(document.getElementById('hidSelectedLink').value == 1)
					{
						document.getElementById('listLink1').checked=true;
					}
					else if(document.getElementById('hidSelectedLink').value == 2)
					{
						document.getElementById('listLink2').checked=true;
					}
					else if(document.getElementById('hidSelectedLink').value == 3)
					{
						document.getElementById('listLink3').checked=true;
					}
					else
					{
						document.getElementById('listLink1').checked=true;
					}
					
				}
	
				$('#user_form_first_name').val(response.first_name);
				$('#user_form_last_name').val(response.last_name);
				$('#user_form_facebookid').val(facebookid);
				if(response.email)
				{
					$('#user_form_email').val(response.email);
					$('#facebook_email').html(response.email);
				}
				var userpass = response.first_name+response.last_name;
				var imgurl = response.picture.data.url;
				$('#user_form_plainPassword_password').val(userpass);
				$('#user_form_plainPassword_conf_password').val(userpass);
				$('#user_form_avatar').val(imgurl);

				$('#facebook_name').html(response.first_name+' '+response.last_name);

				$('#facebook_img').html('<img style="margin:0px" id="avatar_img" src="'+imgurl+'">');
				$('#facebook_img_section').show();  
				checkfacebookuser(facebookid);
			});
		}

		function checkfacebookuser(facebookid)
		{
			var rootpath = '{{ path('verifyfbaccount') }}';
			$.post(rootpath,{'facebookid':facebookid},
				function(data)
				{
				   	if(data)
					{
				    	alert(data);
				  	}
					else
					{
					}
				}
			);

		}
		function fblogin() 
