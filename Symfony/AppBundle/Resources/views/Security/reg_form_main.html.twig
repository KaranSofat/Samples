<div class="register-popup {% if form_hidden is defined %}hidden{% endif %}" style="overflow: hidden">
    <h1 class="heading">Step{% if step==7 %} 6 {% else %} {{ step }} {% endif %}{% if step==6 %} {% endif %}: {% if step==6 %} Enter credit card details {% endif %} {% block header %}Sign up now to get funds{% endblock %}</h1>
    <div class="clearfix marge"></div>
    <form id="signup_step_{{ step | default(0) }}_form" {{ form_enctype(form) }}>
        {{ form_row(form._token) }}
        {% block form_container %}{% endblock %}
        {{ form_errors(form) }}
        {#{% if errors is defined %}{{ showErrors(errors) | raw }}{% endif %}#}
        <div class="signup-footer">
            {% set divider = '<span style="margin: 0 10px">|</span>' %}
            {% block footer %}
                <div class="signup-progress">
                    <span class="helper">Your progress:</span>
                    <div class="clearfix"></div>
                    <div class="static-progress" data-value="{{ ((step * 100) / 7) | default(0) }}"></div>
                </div>
				<script type="text/javascript">
					$(document).ready(function() 
					{
						
						if({{ step }} == 6)
						{
							setTimeout(function(){document.getElementById('submit_step1').click(); },1000);

							//document.getElementById('submit_step1').click();
							
						}
					});
					function submitStep6()
					{
						//alert("hello");
						document.getElementById('submit_step1').click();
					}
				</script>
                <div class="signup-submit">
					{% if step!=6 %}
                    {% if step == 1 %}
                        Already have an account?
                        <a
                            class="ajax"
                            data-target="security/login/loginPopup"
                            data-action="Yaw.SecurityRegister.showPopup"
                            href="/"
                            >Login</a>{{ divider | raw }}
                    {% else %}
                        <a
                            class="ajax"
                            data-target="security/register/step_{{ step - 1 }}"
                            data-action="Yaw.SecurityRegister.showStep_{{ step - 1 }}"
                            href="/"
                            >Previous step</a>{{ divider | raw }}
                    {% endif %}

					
                    <input
                            class="submit-signup"
                            id="submit_step"
                            data-step="{{ step }}"
                            type="button"
                            value="{% block submit %} Continue{% endblock %}">
					{% endif %}
                </div>
                <script src="http://connect.facebook.net/en_US/all.js"></script>
                <script>
